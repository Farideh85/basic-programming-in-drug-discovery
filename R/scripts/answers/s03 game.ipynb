   "source": [
    "my_money <- 5\n",
    "for( i in 1:5) {\n",
    "wn <- readline(prompt = \"what number\")\n",
    "rd <- sample(1:6, 1)\n",
    "if( wn == rd) {\n",
    "  my_money <- my_money + 3\n",
    "} else{\n",
    "  my_money <- my_money - 1\n",
    "}\n",
    "if(my_money < 1) {\n",
    "  print(\"you loose\")\n",
    "  break\n",
    "}\n",
    "print(paste0(\"you have: \", my_money))\n",
    "}"
   ]
  }
